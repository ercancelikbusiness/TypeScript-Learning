{
  "compilerOptions": {
    "target": "ES6",                               
    "module": "CommonJS",                            
    "moduleResolution": "Node",                    
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,      
    "skipLibCheck": true,                          
    "strict": true,      
    "noImplicitAny": true,         // Tür belirtilmeden kullanılan her şeyi hata verir
    "noUnusedLocals": true,        // Kullanılmayan yerel değişkenleri hata verir
    "noUnusedParameters": true,    // Kullanılmayan fonksiyon parametrelerini hata verir                          
    "isolatedModules": true,
    "resolveJsonModule": true,                     
    "outDir": "./dist",                            
    "allowJs": true,                               
    "checkJs": true                                
  },
  "include": [
    "src/**/*"                                         
  ],
  "exclude": [
    "node_modules"                                 
  ]
}
