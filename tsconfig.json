{
  "compilerOptions": {
    "target": "ES6",                               
    "module": "CommonJS",                            
    "moduleResolution": "Node",                    
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,      
    "skipLibCheck": true,                          
    "strict": true,                                
    "isolatedModules": true,
    "resolveJsonModule": true,                     
    "outDir": "./dist",                            
    "allowJs": true,                               
    "checkJs": true                                
  },
  "include": [
    "src/**/*"                                      
  ],
  "exclude": [
    "node_modules"                                 
  ]
}
